[user]
	email = ryoung786@gmail.com
	name = Ryan Young
	signingkey = ~/.ssh/id_ed25519.pub

[core]
	editor = emacs -q -nw
	excludesfile = /Users/ryoung/.gitignore
	pager = less -FX

[alias]
	co = checkout
	br = branch
	st = status
	ci = commit
	lg = log --pretty=format:"%C(yellow)%h\\ %C(green)%cs%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	up = pull --rebase
[commit]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = /Users/ryoung/.ssh/allowed_signers
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[tag]
	gpgsign = true
[gpg]
	format = ssh
